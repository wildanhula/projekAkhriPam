<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewRestaurant"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restoran" />

        <!-- Nama Restoran -->
        <TextView
            android:id="@+id/textRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Restoran"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Deskripsi + Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/foodDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deskripsi Restoran"
                android:textSize="14sp"
                android:textColor="#777777" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Edit"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <!-- Tombol Ikon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/share"
                android:contentDescription="Share" />

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/like"
                android:contentDescription="Like" />

            <ImageView
                android:id="@+id/dislikeIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/dislike"
                android:contentDescription="Dislike" />

            <ImageButton
                android:id="@+id/btnBookmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/bookmark2"
                android:contentDescription="Bookmark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
