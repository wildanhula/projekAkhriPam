<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_image"
    android:layout_marginEnd="15dp"
    android:padding="10dp">

    <!-- Gambar Restoran -->
    <ImageView
        android:id="@+id/imageViewRestaurant"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/restoran"
        android:scaleType="centerCrop"
        android:contentDescription="@string/restaurant_image_desc"/>

    <!-- Nama Restoran -->
    <TextView
        android:id="@+id/textRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Restoran"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="5dp"/>

    <!-- Deskripsi Restoran + Edit Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/foodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Restoran"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingBottom="5dp"/>

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit_button_desc"
            android:src="@drawable/ic_edit" />
    </LinearLayout>

    <!-- Lokasi (disembunyikan) -->
    <TextView
        android:id="@+id/textLocation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Harga (disembunyikan) -->
    <TextView
        android:id="@+id/textPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Ikon Share, Like, Dislike, Bookmark -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="6dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/share"
            android:layout_margin="5dp"
            android:contentDescription="@string/share_icon" />

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like"
            android:layout_margin="5dp"
            android:contentDescription="@string/like_icon" />

        <ImageView
            android:id="@+id/dislikeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dislike"
            android:layout_margin="5dp"
            android:contentDescription="@string/dislike_icon" />

        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/save"
            android:layout_margin="5dp"
            android:contentDescription="@string/save_icon" />
    </LinearLayout>
</LinearLayout>
