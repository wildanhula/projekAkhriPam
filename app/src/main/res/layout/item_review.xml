<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    android:background="@drawable/bg_item_review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_item_review">

        <!-- Tanggal (rata kanan) -->
        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024/05/06 19:30:38"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="end" />

        <TextView
            android:id="@+id/text_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Baklava"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <!-- Gambar (ditampilkan jika tersedia) -->
        <ImageView
            android:id="@+id/image_gambar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baklava"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <!-- Isi ulasan -->
        <TextView
            android:id="@+id/text_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rasanya manis bikin gigi ngilu, Tapi rasanya tetep enak kok!"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp" />

        <!-- Menu (ditampilkan jika diperlukan) -->
        <TextView
            android:id="@+id/text_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Menu: Baklava"
            android:textSize="13sp"
            android:textColor="#666666"
            android:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
